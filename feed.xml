---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>{{ site.title | xml_escape }} </title>
		<description>{{ site.description | xml_escape }}</description>
		<link>{{ site.url }}?v=1</link>
		<atom:link href="{{ site.url }}/feed.xml?v=1" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:10 %}{% unless post.tag == "unfinished" %}
			<item>

				<title>{{ post.title | xml_escape }} [{{ post.tag | xml_escape }}]</title>

				<description>
					{{ post.description | xml_escape }}
					<img src="{{ post.thumb }}"/>
					{{ post.content | xml_escape }}
				</description>

				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>

				<link>{{ site.url }}{{ post.url }}?v=1.1</link>

				<guid isPermaLink="true">{{ site.url }}{{ post.url }}?v=1.1</guid>

			</item>
		{% endunless %}{% endfor %}
	</channel>
</rss>

